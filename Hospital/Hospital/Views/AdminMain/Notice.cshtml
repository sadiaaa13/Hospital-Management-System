
@model Demo.Models.Notice

@{
    ViewBag.Title = "Post Notice";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="notice-box">
    <h2>Post a New Notice</h2>
    @using (Html.BeginForm("Notice", "AdminMain", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.notice_title)
            @Html.TextBoxFor(model => model.notice_title, new { @class = "form-control", placeholder = "Enter notice title" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.notice_text)
            @Html.TextAreaFor(model => model.notice_text, new { @class = "form-control", placeholder = "Enter notice text", rows = 4 })
        </div>
        <button type="submit" class="btn btn-primary">Post Notice</button>
    }
</div>

<style>
    .notice-box {
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        background-color: #f9f9f9;
        width: 50%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .notice-box h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .btn {
        display: block;
        width: 100%;
    }
</style>
