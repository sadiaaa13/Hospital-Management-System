
@{
    ViewBag.Title = "not_available";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service Not Available</title>
    <style>
        body {
           
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
        }

        .message-box {
            text-align: center;
            padding: 40px 40px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

            .message-box h1 {
                margin: 0 0 10px;
                font-size: 24px;
                color: #333;
            }

            .message-box p {
                margin: 0;
                font-size: 16px;
                color: #666;
            }
    </style>
</head>
<body>
    <center>
        <div class="message-box">
            <h1>Service Not Available</h1>
            <p>We're sorry, but the service you're trying to reach is currently unavailable. Please try again later.</p>
    </center>
    </div>
</body>
</html>
