
@{
    ViewBag.Title = "Request_for_an_apointment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Information</title>
    <link rel="stylesheet" href="path/to/bootstrap.css">
    <style>
        body {
            background: url('');
            background-size: cover;
            padding-top: 20px;
        }

        .card {
            margin: auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 90%; /* Increased width */
            margin-bottom: 20px;
        }

            .card h2 {
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .card p {
                font-size: 0.9rem;
                color: gray;
            }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-group-toggle {
            display: flex;
        }

            .btn-group-toggle .btn {
                flex: 1;
            }

                .btn-group-toggle .btn:not(:last-child) {
                    margin-right: 5px;
                }

        .img-container {
            position: relative;
            text-align: center;
            color: white;
        }

            .img-container img {
                width: 100%; /* Increased width */
                max-width: 100%;
                height: auto;
            }

            .img-container h1 {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 3rem;
                color: black;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Image before the first card -->
        <div class="img-container">
            <img src="https://media.istockphoto.com/id/1364075546/photo/empty-corridor-in-modern-hospital-with-information-counter-and-hospital-bed-in-rooms-3d.jpg?s=612x612&w=0&k=20&c=xxFDmIVpH1wJaaiorpvfzec4RRggSb48PDb_dU9bTjo=" alt="Image" class="img-fluid mb-4">
            <h1>Doctor's Appoinment</h1>
        </div>

        <!-- First Card -->
        <div class="card">
            <h2>Your Information <span style="font-size: 0.8rem;">(Step 1/3)</span></h2>

            <form>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label for="firstName">Name</label>
                        <input type="text" id="name" class="form-control" placeholder="Name">
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="adress">Address</label>
                        <input type="text" id="address" class="form-control" placeholder="Address">
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="age">Age</label>
                        <input type="number" id="age" class="form-control" placeholder="Age">
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="Blood-Group">Blood Group</label>
                        <input type="text" id="group" class="form-control" placeholder="Blood-Group">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label for="dob">Date of Appointment</label>
                        <input type="date" id="dob" class="form-control">
                        <small class="form-text text-muted"></small>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="gender">Gender</label>
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-primary active">
                                <input type="radio" name="gender" id="male" autocomplete="off" checked> Male
                            </label>
                            <label class="btn btn-secondary">
                                <input type="radio" name="gender" id="female" autocomplete="off"> Female
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label for="phone">Phone Number</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <select class="custom-select">
                                    <option selected>+971</option>
                                    <option selected>+880</option>
                                </select>
                            </div>
                            <input type="tel" id="phone" class="form-control" placeholder="188 123 4567">
                        </div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" class="form-control" placeholder="example@mailbox.com">
                    </div>
                </div>
            </form>
        </div>

        <!-- Second Card -->
        <div class="card">
            <h2>Appointment Information <span style="font-size: 0.8rem;">(Step 2/3)</span></h2>
            <form>
                <div class="form-group">
                    <label>Is this the patient's first visit?</label>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-primary active">
                            <input type="radio" name="firstVisit" id="yes" autocomplete="off" checked> Yes
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="firstVisit" id="no" autocomplete="off"> No
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="service">What specific service or specialty do you require?</label>
                    <select id="service" class="form-control">
                        <option selected>Pediatric</option>
                        <option selected>Medicine</option>
                        <option selected>Arthopedic</option>
                        <option selected>Select your option</option>
                    </select>
                </div>
                
                <h2>Payment <span style="font-size: 0.8rem;">(Step 3/3)</span></h2>
                
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="privacyPolicy">
                    <label class="form-check-label" for="privacyPolicy">I consent to the <a href="#">Privacy Policy</a>.</label>
                </div>
                <button type="submit" class="btn btn-success">Payment</button>
            </form>
        </div>
    </div>

    <script src="path/to/jquery.js"></script>
    <script src="path/to/bootstrap.js"></script>
</body>
</html>